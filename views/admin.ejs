<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link
      rel="shortcut icon"
      href="../images/assets/research.png"
      type="image/x-icon"
    />
    <link rel="stylesheet" href="/styles/item.css" />
    <title>Admin Dashboard</title>
  </head>
  <body>
    <nav class="navbar">
      <div class="container-fluid">
        <span class="navbar-brand mb-0 h1">
          <img src="../images/assets/logo.svg" class="logo" alt="logo" />
        </span>
        <div id="navbarButtons"></div>
      </div>
    </nav>

    <div class="container mt-4">
      <h1 class="admin-h1">Admin Control: Unauthenticated Users</h1>
      <% let foundUserWithReport = false; %> <% users.forEach(user => { %> <% if
      (user.report == true) { %> <% foundUserWithReport = true; %>
      <div class="card admin mb-3" id="<%= user._id %>">
        <div class="card-body admin">
          <p class="card-text"><%= user.email %></p>
          <button
            class="btn btn-danger"
            onclick="removeUser('<%= user._id %>')"
          >
            Remove User
          </button>
        </div>
      </div>
      <% } %> <% }); %> <% if (!foundUserWithReport) { %>
      <p class="text-center alert alert-dark w-50 m-auto mt-4">
        No authenticated users found
      </p>
      <% } %>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/scripts/item.js"></script>
  </body>
</html>
